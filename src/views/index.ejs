<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <main>
      <header>
        <h1><%= title %></h1>
      </header>
      <section>
        <a href="/new">
          <button class="message-send-btn">Send a new message</button>
        </a>
      </section>
      <section>
        <% messages.forEach(({user, added, text}) => { %>
        <div class="message">
          <div class="open-overlay">open</div>
          <h3><%= user %></h3>
          <p><%= added %></p>
          <p><%= text %></p>
        </div>
        <% }) %>
      </section>
    </main>
  </body>
</html>
